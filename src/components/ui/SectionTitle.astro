---
interface Props {
  title: string;
  subtitle?: string;
  align?: "left" | "center";
  level?: 1 | 2 | 3 | 4 | 5 | 6;
}

const { title, subtitle, align = "center", level = 2 } = Astro.props;

const alignClasses = align === "center" ? "text-center" : "text-left";
const headingClass = "text-3xl md:text-4xl font-bold text-zinc-900 dark:text-zinc-100 mb-4";
---

<div class={`mb-12 ${alignClasses}`}>
  {level === 1 && <h1 class={headingClass}>{title}</h1>}
  {level === 2 && <h2 class={headingClass}>{title}</h2>}
  {level === 3 && <h3 class={headingClass}>{title}</h3>}
  {level === 4 && <h4 class={headingClass}>{title}</h4>}
  {level === 5 && <h5 class={headingClass}>{title}</h5>}
  {level === 6 && <h6 class={headingClass}>{title}</h6>}
  {subtitle && <p class="text-lg text-zinc-600 dark:text-zinc-400 max-w-2xl mx-auto">{subtitle}</p>}
</div>
