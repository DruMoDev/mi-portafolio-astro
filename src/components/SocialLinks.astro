---
import { Github, Linkedin, Mail } from '@lucide/astro';
import { siteConfig } from '../data/site';

interface Props {
  size?: 'sm' | 'md' | 'lg';
}

const { size = 'md' } = Astro.props;

const iconSizes = {
  sm: 'w-4 h-4',
  md: 'w-5 h-5',
  lg: 'w-6 h-6',
};

const buttonSizes = {
  sm: 'p-2',
  md: 'p-2.5',
  lg: 'p-3',
};

const iconComponents = {
  github: Github,
  linkedin: Linkedin,
  email: Mail,
};
---

<div class="flex items-center gap-3">
  {siteConfig.social.map((link) => {
    const Icon = iconComponents[link.platform as keyof typeof iconComponents];
    return (
      <a
        href={link.url}
        target={link.platform !== 'email' ? '_blank' : undefined}
        rel={link.platform !== 'email' ? 'noopener noreferrer' : undefined}
        aria-label={link.label}
        class={`${buttonSizes[size]} rounded-lg bg-zinc-100 dark:bg-zinc-800 text-zinc-700 dark:text-zinc-300 hover:bg-zinc-200 dark:hover:bg-zinc-700 hover:text-blue-600 dark:hover:text-blue-400 transition-colors`}
      >
        <Icon class={iconSizes[size]} />
      </a>
    );
  })}
</div>
