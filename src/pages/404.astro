---
import BaseLayout from "../layouts/BaseLayout.astro";
import Button from "../components/ui/Button.astro";
import { getTranslations, defaultLocale } from "../i18n";
import { getRelativeLocaleUrl } from "astro:i18n";
import type { Locale } from "../types";

const locale = (Astro.currentLocale ?? defaultLocale) as Locale;
const t = getTranslations(locale);
---

<BaseLayout locale={locale} seo={{ title: t.notFound.title, description: t.notFound.description }}>
  <section class="min-h-[70vh] flex items-center justify-center px-4">
    <div class="text-center max-w-lg">
      <h1 class="text-8xl font-bold text-blue-600 dark:text-blue-400 mb-4">404</h1>
      <h2 class="text-2xl md:text-3xl font-bold text-zinc-900 dark:text-zinc-100 mb-4">
        {t.notFound.heading}
      </h2>
      <p class="text-zinc-600 dark:text-zinc-400 mb-8">
        {t.notFound.description}
      </p>
      <div class="flex gap-4 justify-center">
        <Button href={getRelativeLocaleUrl(locale)}>
          {t.notFound.goHome}
        </Button>
      </div>
    </div>
  </section>
</BaseLayout>
